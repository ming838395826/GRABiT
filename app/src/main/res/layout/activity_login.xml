<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="right"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ming.grabit.logreg.LoginActivity">

    <com.taobao.uikit.feature.view.TTextView
        android:text="@string/text_login_phone"
        android:textColor="@color/app_font_color_main_title"
        android:textSize="@dimen/app_font_title_size"
        android:layout_marginTop="36dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.taobao.uikit.feature.view.TTextView
            android:id="@+id/ttv_phone_area"
            android:text="+852"
            android:textColor="@color/app_font_color_main_title"
            android:layout_centerVertical="true"
            android:textSize="@dimen/app_font_title_sub_15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_phone"
            android:hint="@string/text_login_phone_hint"
            android:inputType="number"
            android:maxLength="8"
            android:layout_marginLeft="21dp"
            android:layout_toRightOf="@+id/ttv_phone_area"
            android:textColor="@color/app_font_color_main_title"
            android:textColorHint="@color/app_font_color_main_title_hint"
            android:textSize="@dimen/app_font_title_sub_15sp"
            android:gravity="center_vertical"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <View
            android:layout_toRightOf="@+id/ttv_phone_area"
            android:layout_below="@+id/et_phone"
            android:background="@color/app_line_color_dc"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"/>
    </RelativeLayout>

    <com.taobao.uikit.feature.view.TTextView
        android:text="@string/text_login_pwd"
        android:textColor="@color/app_font_color_main_title"
        android:textSize="@dimen/app_font_title_size"
        android:layout_marginTop="36dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_pwd"
        android:layout_marginTop="3dp"
        android:hint="@string/text_login_pwd_hint"
        android:inputType="textPassword"
        android:textColor="@color/app_font_color_main_title"
        android:textColorHint="@color/app_font_color_main_title_hint"
        android:textSize="@dimen/app_font_title_sub_15sp"
        android:gravity="center_vertical"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <View
        android:background="@color/app_line_color_dc"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"/>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.taobao.uikit.feature.view.TTextView
            android:layout_marginTop="48dp"
            android:id="@+id/tbtn_forget_pwd"
            android:gravity="center"
            android:text="@string/text_login_forget_pwd"
            android:textColor="@color/app_font_color_main_title_sub"
            android:textSize="@dimen/app_font_title_sub_15sp"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />

        <com.taobao.uikit.feature.view.TTextView
            android:layout_marginTop="48dp"
            android:id="@+id/tbtn_login"
            android:gravity="center"
            android:enabled="false"
            android:text="@string/text_login_btn"
            android:textColor="@color/color_white"
            android:textSize="@dimen/app_font_title_sub_15sp"
            android:background="@drawable/btn_color_191917"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_width="126dp"
            android:layout_height="40dp" />
    </RelativeLayout>


</LinearLayout>
