        tl:tl_indicator_color="@color/transparent"
        tl:tl_textUnselectColor="@color/app_font_color_main_title_sub"
        tl:tl_textSelectColor="@color/app_font_color_main_title"
        tl:tl_indicator_width="25dp"
        tl:tl_underline_color="@color/color_white"
        tl:tl_underline_height="0dp"/>

    <FrameLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingLeft="10dp"
