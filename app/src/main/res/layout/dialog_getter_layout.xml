<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:clipChildren="false"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@drawable/dialog_bg_white_r6"
        android:gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.taobao.uikit.feature.view.TTextView
            android:id="@+id/ttv_title"
            android:paddingTop="72.5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="@dimen/app_font_title_sub_16sp"
            android:text="@string/text_getter_title"
            android:textColor="@color/app_font_color_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:background="@drawable/bg_card_blur"
            android:layout_marginLeft="@dimen/dimen_15"
            android:layout_marginRight="@dimen/dimen_15">

            <com.taobao.uikit.feature.view.TTextView
                android:id="@+id/tv_good_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="低溫慢煮牛肉德國工藝..."
                android:textColor="#ff333333"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginRight="23dp"/>

            <com.taobao.uikit.feature.view.TImageView
                android:id="@+id/iv_url"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/bg_pic_defualt" />
        </LinearLayout>


        <com.taobao.uikit.feature.view.TTextView
            android:paddingTop="13.5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:gravity="center"
            android:textSize="@dimen/app_font_title_sub_16sp"
            android:text="@string/text_getter_hint"
            android:textColor="@color/app_font_color_main_title_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <com.taobao.uikit.feature.view.TTextView
            android:layout_marginTop="25.5dp"
            android:id="@+id/tbtn_to_login"
            android:gravity="center"
            android:text="@string/text_ok"
            android:textColor="@color/color_white"
            android:textSize="@dimen/app_font_title_sub_15sp"
            android:background="@drawable/btn_color_191917"
            android:layout_marginBottom="33dp"
            android:layout_width="226.5dp"
            android:layout_height="40dp" />

    </LinearLayout>

    <com.taobao.uikit.feature.view.TImageView
        android:src="@mipmap/icon_dialog_gifta"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.taobao.uikit.feature.view.TImageView
        android:id="@+id/timg_close"
        android:src="@mipmap/icon_dialog_close"
        android:paddingLeft="20dp"
        android:paddingBottom="20dp"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</FrameLayout>
