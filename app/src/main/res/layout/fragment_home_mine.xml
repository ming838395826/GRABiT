<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.android.spin.home.fragment.HomeFoundFragment">

    <com.android.base.base.BaseHeaderTitleBarView
        android:id="@+id/btb_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"></com.android.base.base.BaseHeaderTitleBarView>

    <include layout="@layout/layout_line" />

    <com.taobao.uikit.feature.view.TScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_mine_info"
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:background="@color/color_white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <com.android.spin.common.selector.view.CircleImageView
                    android:id="@+id/cimg_user_avatar"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/bg_mine_avatar"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/icon_mine_header" />

                <com.taobao.uikit.feature.view.TTextView
                    android:id="@+id/ttv_mine_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:drawableRight="@mipmap/icon_gray_go"
                    android:gravity="center_vertical"
                    android:text="哈哈"
                    android:textColor="@color/app_font_color_main_title"
                    android:textSize="@dimen/app_font_title_sub_16sp" />

            </LinearLayout>

            <include layout="@layout/layout_line" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#f7f7f6" />

            <com.android.spin.view.MineTabItemView
                android:id="@+id/miv_mine_clear_cache"
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_tab_item_height"
                android:background="@color/color_white"
                app:title="@string/text_mine_clear_cache"/>

            <com.android.spin.view.MineTabItemView
                android:id="@+id/miv_mine_set_language"
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_tab_item_height"
                android:background="@color/color_white"
                app:title="@string/text_mine_set_language"/>

            <com.android.spin.view.MineTabItemView
                android:id="@+id/miv_mine_mobile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_tab_item_height"
                android:background="@color/color_white"
                app:title="@string/text_mine_mobile"/>

            <com.android.spin.view.MineTabItemView
                android:id="@+id/miv_mine_feed_back"
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_tab_item_height"
                android:background="@color/color_white"
                app:title="@string/text_mine_feed_back"/>

            <com.android.spin.view.MineTabItemView
                android:id="@+id/miv_mine_contact_us"
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_tab_item_height"
                android:background="@color/color_white"
                app:title="@string/text_mine_contact_us"/>

            <com.android.spin.view.MineTabItemView
                android:id="@+id/miv_mine_version"
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_tab_item_height"
                android:background="@color/color_white"
                app:enable="false"
                app:title="@string/text_mine_current_version"></com.android.spin.view.MineTabItemView>

            <com.android.spin.view.MineTabItemView
                android:id="@+id/miv_mine_agreement"
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_tab_item_height"
                android:background="@color/color_white"
                app:title="@string/text_mine_service_agreement"></com.android.spin.view.MineTabItemView>

            <com.android.spin.view.MineTabItemView
                android:id="@+id/miv_mine_about_grabit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_tab_item_height"
                android:background="@color/color_white"
                app:showLine="false"
                app:title="@string/text_mine_about"></com.android.spin.view.MineTabItemView>

            <include layout="@layout/layout_line" />

            <com.taobao.uikit.feature.view.TTextView
                android:id="@+id/tv_bind_face_book"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/btn_color_191917"
                android:gravity="center"
                android:text="@string/text_mine_bind_face_book"
                android:textColor="@color/color_white"
                android:textSize="@dimen/app_font_title_sub_15sp" />

            <com.taobao.uikit.feature.view.TTextView
                android:id="@+id/tv_face_book_login"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_above="@+id/tv_logout"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_border_color_191917"
                android:gravity="center"
                android:text="@string/text_mine_logout"
                android:textColor="#000"
                android:textSize="@dimen/app_font_title_sub_15sp" />

        </LinearLayout>
    </com.taobao.uikit.feature.view.TScrollView>

</LinearLayout>
