<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.spin.mine.UserInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical">

        <include layout="@layout/layout_line" />

        <LinearLayout
            android:id="@+id/ll_avatar"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin">

            <com.taobao.uikit.feature.view.TTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_user_info_avatar"
                android:textColor="@color/app_color_4a4a4a"
                android:textSize="@dimen/app_font_title_sub_15sp" />

            <com.android.spin.common.selector.view.CircleImageView
                android:id="@+id/timg_mine_avatar"
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/icon_mine_header" />
        </LinearLayout>

        <View
            android:background="@color/app_line_color_dc"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <com.taobao.uikit.feature.view.TTextView
                android:layout_width="69dp"
                android:layout_height="wrap_content"
                android:text="@string/text_user_info_name"
                android:textColor="@color/app_color_4a4a4a"
                android:textSize="@dimen/app_font_title_sub_15sp" />

            <com.taobao.uikit.feature.view.TEditText
                android:id="@+id/tet_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:hint="@string/text_user_info_name_hint"
                android:textColor="@color/app_font_color_main_title_sub"
                android:textColorHint="@color/app_font_color_main_title_hint"
                android:textSize="@dimen/app_font_title_sub_15sp" />

        </LinearLayout>

        <View
            android:background="@color/app_line_color_dc"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <com.taobao.uikit.feature.view.TTextView
                android:layout_width="69dp"
                android:layout_height="wrap_content"
                android:text="@string/text_user_info_gender"
                android:textColor="@color/app_color_4a4a4a"
                android:textSize="@dimen/app_font_title_sub_15sp" />

            <com.taobao.uikit.feature.view.TTextView
                android:id="@+id/ttv_gender"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableRight="@mipmap/icon_gray_go"
                android:gravity="center_vertical"
                android:hint="@string/text_user_info_gender_hint"
                android:paddingRight="10dp"
                android:textColor="@color/app_font_color_main_title_sub"
                android:textColorHint="@color/app_font_color_main_title_hint"
                android:textSize="@dimen/app_font_title_sub_15sp" />

            <!--<com.taobao.uikit.feature.view.TImageView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:src="@mipmap/icon_gray_go" />-->

        </LinearLayout>

        <View
            android:background="@color/app_line_color_dc"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <com.taobao.uikit.feature.view.TTextView
                android:layout_width="69dp"
                android:layout_height="wrap_content"
                android:text="@string/text_user_info_date_birth"
                android:textColor="@color/app_color_4a4a4a"
                android:textSize="@dimen/app_font_title_sub_15sp" />

            <com.taobao.uikit.feature.view.TTextView
                android:id="@+id/ttv_date_birth"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableRight="@mipmap/icon_gray_go"
                android:gravity="center_vertical"
                android:hint="@string/text_user_info_date_birth_hint"
                android:paddingRight="10dp"
                android:textColor="@color/app_font_color_main_title_sub"
                android:textColorHint="@color/app_font_color_main_title_hint"
                android:textSize="@dimen/app_font_title_sub_15sp" />

            <!--<com.taobao.uikit.feature.view.TImageView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:src="@mipmap/icon_gray_go" />-->

        </LinearLayout>

        <include
            layout="@layout/layout_line" />
    </LinearLayout>

</ScrollView>
